{
  "deployment": {
    "testImageBaseName": "aws-ami-test",
    "testInstanceBaseName": "aws-instance-test",
    "prodImageBaseName": "aws-ami-prod",
    "prodInstanceBaseName": "aws-instance-prod",
    "domainName": "example.com",
    "hostedZoneID": "ZABCDEFG123456",
    "sslPolicy": {
      "ssl": false,
      "certList": [ "exampleYYYYMMDD.crt", "exampleYYYYMMDD.key", "example-chainYYYYMMDD.crt" ],
      "certFolderLocalPath": "/local/path/to/ssl/"
    }
  },
  "components": [
    {
      "versionControl": "git",
      "repoURL": "https://username:password@bitbucket.org/username/componenta.git",
      "credFolderName": "cred",
      "credFolderLocalPath": "/local/path/to/componenta/",
      "credFolderRemotePath": "/home/ec2-user/componenta/",
      "dockerImage": "dockerimagename",
      "composeScript": "startComponent.sh",
      "containerAlias": "componenta-alias",
      "containerPort": 5000,
      "domainAlias": "example.com",
      "tests": {
        "http": [ { "endpoint": "", "response": "" } ],
        "internal": [ { "command": "", "return": "" } ],
        "services": [ { "endpoint": "" } ]
      }
    },
    {
      "versionControl": "git",
      "repoURL": "https://username:password@bitbucket.org/username/componentb.git",
      "credFolderName": "cred",
      "credFolderLocalPath": "/local/path/to/componentb/",
      "credFolderRemotePath": "/home/ec2-user/componentb/",
      "dockerImage": "dockerimagename",
      "composeScript": "startComponent.sh",
      "containerAlias": "componentb-alias",
      "containerPort": 5001,
      "domainAlias": "sub.example.com",
      "tests": {
        "http": [ { "endpoint": "", "response": "" } ],
        "internal": [ { "command": "", "return": "" } ],
        "services": [ { "endpoint": "" } ]
      }
    }
  ]
}
